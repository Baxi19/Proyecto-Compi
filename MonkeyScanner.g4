//-------------------------------------------------------------------------------------------------------------------
//                                      Lexer Rules
lexer grammar MonkeyScanner;
//-------------------------------------------------------------------------------------------------------------------


//-------------------------------------------------------------------------------------------------------------------
//Reserved words
//-------------------------------------------------------------------------------------------------------------------
LET     : 'let';
RETURN  : 'return';
FN      : 'fn';
PUTS    : 'puts';
IF      : 'if';
ELSE    : 'else';

//-------------------------------------------------------------------------------------------------------------------
//Arrays Funtions
//-------------------------------------------------------------------------------------------------------------------
LEN     : 'len';
FIRST   : 'first';
LAST    : 'last';
REST    : 'rest';
PUSH    : 'push';


//-------------------------------------------------------------------------------------------------------------------
// Separators
//-------------------------------------------------------------------------------------------------------------------
L_PAREN : '(';
R_PAREN : ')';
L_BRACE : '{';
R_BRACE : '}';
L_BRACK : '[';
R_BRACK : ']';
PYCOMMA : ';';
COMMA   : ',';
COLON   : ':';


//-------------------------------------------------------------------------------------------------------------------
//  Operators
//-------------------------------------------------------------------------------------------------------------------
LE      : '<=';
GE      : '>=';
EQUAL   : '==';
GT      : '>';
LT      : '<';
ASSIGN  : '=';


// basics
ADD     : '+';
SUB     : '-';
MUL     : '*';
DIV     : '/';

//-------------------------------------------------------------------------------------------------------------------
// Types
//-------------------------------------------------------------------------------------------------------------------
TRUE    : 'true';
FALSE   : 'false';

//-------------------------------------------------------------------------------------------------------------------
//  Identifiers (must appear after all keywords in the grammar)
//-------------------------------------------------------------------------------------------------------------------
NUMBER  : [1-9]([0-9])*
        | ZERO;

ZERO    : [0]*;

STRING  : '"' (~["])+ '"';

IDENT   : [a-z]([a-zA-Z]|[0-9]|'_')*;

//-------------------------------------------------------------------------------------------------------------------
// Skiped
//-------------------------------------------------------------------------------------------------------------------
WS              : [ \r\t\n]+                        -> skip ;
BLOCK_COMMENT   : '/*' .*? '*/'                     -> skip;
SINGLE_COMMENT  : '//' ~[\r\n]* '\r'? '\n'          -> skip ;

